<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lavaderosepulveda.crm.controller.CitasController"
      spacing="20">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Encabezado -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="GestiÃ³n de Citas" styleClass="title-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnNuevaCita" text="Nueva Cita" styleClass="primary-button" onAction="#nuevaCita"/>
        <Button fx:id="btnCalendario" text="Calendario" onAction="#abrirCalendario"/>
    </HBox>
    
    <!-- Filtros -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Fecha:"/>
        <DatePicker fx:id="dpFecha" prefWidth="150"/>
        
        <Label text="Estado:"/>
        <ComboBox fx:id="cmbEstado" prefWidth="150" promptText="Todos"/>
        
        <Button fx:id="btnFiltrar" text="Filtrar" onAction="#filtrarCitas"/>
    </HBox>
    
    <!-- Tabla de citas -->
    <TableView fx:id="tblCitas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colFechaHora" text="Fecha/Hora" prefWidth="150"/>
            <TableColumn fx:id="colCliente" text="Cliente" prefWidth="200"/>
            <TableColumn fx:id="colServicios" text="Servicios" prefWidth="250"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
            <TableColumn fx:id="colImporte" text="Importe" prefWidth="100"/>
            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="150"/>
        </columns>
    </TableView>
    
</VBox>