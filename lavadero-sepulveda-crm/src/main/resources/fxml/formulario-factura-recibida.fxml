<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lavaderosepulveda.crm.controller.FormularioFacturaRecibidaController"
            fitToWidth="true" prefWidth="700" prefHeight="750">
    
    <VBox spacing="15">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <!-- Título -->
        <Label fx:id="lblTitulo" text="Nueva Factura Recibida">
            <font><Font size="18" name="System Bold"/></font>
        </Label>
        
        <Separator/>
        
        <!-- Datos del Proveedor -->
        <TitledPane text="Datos del Proveedor" expanded="true" collapsible="false">
            <GridPane hgap="10" vgap="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                
                <Label text="Proveedor:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3">
                    <ComboBox fx:id="cmbProveedor" promptText="Seleccionar proveedor..." prefWidth="300"/>
                    <Button text="+ Nuevo" onAction="#nuevoProveedor"/>
                </HBox>
                
                <Label text="O introducir manualmente:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4"/>
                
                <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="txtProveedorNombre" promptText="Nombre del proveedor" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200"/>
                
                <Label text="NIF:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="txtProveedorNif" promptText="NIF/CIF" GridPane.columnIndex="3" GridPane.rowIndex="2" prefWidth="150"/>
                
                <columnConstraints>
                    <ColumnConstraints minWidth="80"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints minWidth="50"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
            </GridPane>
        </TitledPane>
        
        <!-- Datos de la Factura -->
        <TitledPane text="Datos de la Factura" expanded="true" collapsible="false">
            <GridPane hgap="10" vgap="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                
                <Label text="Nº Factura:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtNumeroFactura" promptText="Número de factura" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Fecha Factura:*" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <DatePicker fx:id="dpFechaFactura" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="150"/>
                
                <Label text="Categoría:*" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <ComboBox fx:id="cmbCategoria" promptText="Seleccionar..." GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>
                
                <Label text="Vencimiento:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dpFechaVencimiento" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="150"/>
                
                <columnConstraints>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
            </GridPane>
        </TitledPane>
        
        <!-- Líneas de Factura -->
        <TitledPane text="Conceptos / Líneas de Factura" expanded="true" collapsible="false">
            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                
                <!-- Tabla de líneas -->
                <TableView fx:id="tablaLineas" prefHeight="150">
                    <columns>
                        <TableColumn fx:id="colConcepto" text="Concepto" prefWidth="250"/>
                        <TableColumn fx:id="colCantidad" text="Cant." prefWidth="60"/>
                        <TableColumn fx:id="colPrecioUnitario" text="P. Unit." prefWidth="80"/>
                        <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="90"/>
                        <TableColumn fx:id="colEliminar" text="" prefWidth="40"/>
                    </columns>
                    <placeholder><Label text="Añada líneas a la factura"/></placeholder>
                </TableView>
                
                <!-- Formulario para añadir línea -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtConcepto" promptText="Concepto" prefWidth="200"/>
                    <Label text="Cant:"/>
                    <Spinner fx:id="spnCantidad" prefWidth="70"/>
                    <Label text="Precio:"/>
                    <TextField fx:id="txtPrecioUnitario" promptText="0.00" prefWidth="80"/>
                    <Label text="€"/>
                    <Button text="+ Añadir" onAction="#agregarLinea" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </TitledPane>
        
        <!-- Importes -->
        <TitledPane text="Importes" expanded="true" collapsible="false">
            <GridPane hgap="10" vgap="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                
                <Label text="Base Imponible:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="lblBaseImponible" text="0,00 €" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Tipo IVA:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <ComboBox fx:id="cmbTipoIva" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="80"/>
                
                <Label text="Cuota IVA:" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
                <Label fx:id="lblCuotaIva" text="0,00 €" style="-fx-font-weight: bold;" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
                
                <Label text="Tipo IRPF:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <ComboBox fx:id="cmbTipoIrpf" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="80"/>
                
                <Label text="Retención IRPF:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Label fx:id="lblCuotaIrpf" text="0,00 €" style="-fx-font-weight: bold; -fx-text-fill: #c62828;" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                
                <Separator GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="6"/>
                
                <Label text="TOTAL:" style="-fx-font-size: 16px; -fx-font-weight: bold;" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
                <Label fx:id="lblTotal" text="0,00 €" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" GridPane.columnIndex="5" GridPane.rowIndex="3"/>
                
                <columnConstraints>
                    <ColumnConstraints minWidth="90"/>
                    <ColumnConstraints minWidth="80"/>
                    <ColumnConstraints minWidth="80"/>
                    <ColumnConstraints minWidth="80"/>
                    <ColumnConstraints minWidth="80"/>
                    <ColumnConstraints minWidth="100"/>
                </columnConstraints>
            </GridPane>
        </TitledPane>
        
        <!-- Estado y Pago -->
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="Estado:"/>
                <ComboBox fx:id="cmbEstado" prefWidth="120"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Método de Pago:"/>
                <ComboBox fx:id="cmbMetodoPago" prefWidth="150"/>
            </VBox>
        </HBox>
        
        <!-- Notas -->
        <VBox spacing="5">
            <Label text="Notas:"/>
            <TextArea fx:id="txtNotas" promptText="Notas adicionales..." prefRowCount="2"/>
        </VBox>
        
        <Separator/>
        
        <!-- Botones -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancelar" onAction="#cancelar" prefWidth="100" style="-fx-background-color: #e0e0e0;"/>
            <Button text="Guardar" onAction="#guardar" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        </HBox>
        
    </VBox>
</ScrollPane>
