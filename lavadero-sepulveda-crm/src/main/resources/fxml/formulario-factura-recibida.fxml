<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lavaderosepulveda.crm.controller.FormularioFacturaRecibidaController"
      spacing="15" prefWidth="800" prefHeight="700">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título -->
    <Label fx:id="lblTitulo" text="Nueva Factura Recibida"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Separator/>

    <!-- ScrollPane para el contenido -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="15">

            <!-- Datos del Proveedor -->
            <TitledPane text="Datos del Proveedor" expanded="true" collapsible="false">
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <!-- Botón nuevo proveedor -->
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="+ Nuevo Proveedor" onAction="#nuevoProveedor"
                                style="-fx-background-color: #e0e0e0;"/>
                    </HBox>

                    <GridPane hgap="15" vgap="10">
                        <Label text="Proveedor:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="cmbProveedor" prefWidth="250" promptText="Seleccionar proveedor"
                                  GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3"/>

                        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtProveedorNombre" promptText="O introducir manualmente"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"/>

                        <Label text="NIF/CIF:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtProveedorNif" promptText="NIF/CIF del proveedor"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="3"/>

                        <columnConstraints>
                            <ColumnConstraints minWidth="80"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="80"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>
            </TitledPane>

            <!-- Datos de la Factura -->
            <TitledPane text="Datos de la Factura" expanded="true" collapsible="false">
                <GridPane hgap="15" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Nº Factura:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtNumeroFactura" promptText="Ej: 2025/001" prefWidth="150"
                               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Fecha Factura:*" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <DatePicker fx:id="dpFechaFactura" prefWidth="150"
                                GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Categoría:*" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="cmbCategoria" prefWidth="150" promptText="Seleccionar"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Fecha Venc.:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="dpFechaVencimiento" prefWidth="150"
                                GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <columnConstraints>
                        <ColumnConstraints minWidth="100"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="100"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                </GridPane>
            </TitledPane>

            <!-- Líneas de Factura -->
            <TitledPane text="Líneas de Factura" expanded="true" collapsible="false">
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <!-- Tabla de líneas -->
                    <TableView fx:id="tablaLineas" prefHeight="150">
                        <columns>
                            <TableColumn fx:id="colConcepto" text="Concepto" prefWidth="300"/>
                            <TableColumn fx:id="colCantidad" text="Cant." prefWidth="60"/>
                            <TableColumn fx:id="colPrecioUnitario" text="P. Unitario" prefWidth="100"/>
                            <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="100"/>
                            <TableColumn fx:id="colEliminar" text="" prefWidth="50"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>

                    <!-- Agregar línea -->
                    <GridPane hgap="10" vgap="5">
                        <Label text="Concepto:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtConcepto" promptText="Descripción"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="5"/>

                        <Label text="Cantidad:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Spinner fx:id="spnCantidad" prefWidth="80" editable="true"
                                 GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Precio Unit.:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtPrecioUnitario" promptText="0.00" prefWidth="100"
                                   GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                        <Button text="+ Agregar" onAction="#agregarLinea"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                                GridPane.columnIndex="5" GridPane.rowIndex="1"/>

                        <columnConstraints>
                            <ColumnConstraints minWidth="80"/>
                            <ColumnConstraints minWidth="100"/>
                            <ColumnConstraints minWidth="80"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="20"/>
                            <ColumnConstraints minWidth="100"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>
            </TitledPane>

            <!-- Totales -->
            <TitledPane text="Totales" expanded="true" collapsible="false">
                <GridPane hgap="15" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Base Imponible:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="lblBaseImponible" text="0,00 €" style="-fx-font-weight: bold;"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Tipo IVA:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="cmbTipoIva" prefWidth="100" promptText="Seleccionar"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label text="Cuota IVA:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <Label fx:id="lblCuotaIva" text="0,00 €" style="-fx-font-weight: bold;"
                           GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Tipo IRPF:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="cmbTipoIrpf" prefWidth="100" promptText="Seleccionar"
                              GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label text="Cuota IRPF:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <Label fx:id="lblCuotaIrpf" text="0,00 €" style="-fx-font-weight: bold;"
                           GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <Separator GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="4"/>

                    <Label text="IMPORTE TOTAL:" style="-fx-font-size: 14px; -fx-font-weight: bold;"
                           GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
                    <Label fx:id="lblTotal" text="0,00 €"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #c62828;"
                           GridPane.columnIndex="2" GridPane.rowIndex="4" GridPane.columnSpan="2"/>

                    <columnConstraints>
                        <ColumnConstraints minWidth="120"/>
                        <ColumnConstraints minWidth="120"/>
                        <ColumnConstraints minWidth="100"/>
                        <ColumnConstraints minWidth="120"/>
                    </columnConstraints>
                </GridPane>
            </TitledPane>

            <!-- Estado y Pago -->
            <TitledPane text="Estado y Pago" expanded="true" collapsible="false">
                <GridPane hgap="15" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Estado:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="cmbEstado" prefWidth="150" promptText="Seleccionar"
                              GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Método Pago:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="cmbMetodoPago" prefWidth="150" promptText="Seleccionar"
                              GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <columnConstraints>
                        <ColumnConstraints minWidth="100"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="100"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                </GridPane>
            </TitledPane>

            <!-- Notas -->
            <VBox spacing="5">
                <Label text="Notas / Observaciones:"/>
                <TextArea fx:id="txtNotas" promptText="Notas adicionales..." prefRowCount="3"/>
            </VBox>

        </VBox>
    </ScrollPane>

    <Separator/>

    <!-- Botones -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#cancelar" prefWidth="100"
                style="-fx-background-color: #e0e0e0;"/>
        <Button text="Guardar" onAction="#guardar" prefWidth="100"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

</VBox>