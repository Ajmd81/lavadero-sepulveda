<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lavaderosepulveda.crm.controller.FormularioProveedorController"
      spacing="15" prefWidth="500" prefHeight="450">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Título -->
    <Label fx:id="lblTitulo" text="Nuevo Proveedor" 
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Separator/>
    
    <!-- Datos básicos -->
    <TitledPane text="Datos Básicos" expanded="true" collapsible="false">
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label text="Nombre:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtNombre" promptText="Nombre o razón social" 
                       GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"/>
            
            <Label text="NIF/CIF:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtNif" promptText="NIF o CIF" 
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtDireccion" promptText="Dirección completa" 
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <columnConstraints>
                <ColumnConstraints minWidth="80"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
        </GridPane>
    </TitledPane>
    
    <!-- Contacto -->
    <TitledPane text="Datos de Contacto" expanded="true" collapsible="false">
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtTelefono" promptText="Teléfono" 
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="txtEmail" promptText="email@ejemplo.com" 
                       GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            
            <Label text="Contacto:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtContacto" promptText="Persona de contacto" 
                       GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"/>
            
            <columnConstraints>
                <ColumnConstraints minWidth="70"/>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints minWidth="50"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
        </GridPane>
    </TitledPane>
    
    <!-- Datos bancarios -->
    <TitledPane text="Datos Bancarios" expanded="true" collapsible="false">
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label text="IBAN:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtIban" promptText="ES00 0000 0000 0000 0000 0000" 
                       GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="280"/>
            
            <columnConstraints>
                <ColumnConstraints minWidth="50"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
        </GridPane>
    </TitledPane>
    
    <!-- Notas -->
    <VBox spacing="5">
        <Label text="Notas:"/>
        <TextArea fx:id="txtNotas" promptText="Observaciones..." prefRowCount="2"/>
    </VBox>
    
    <!-- Estado -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <CheckBox fx:id="chkActivo" text="Proveedor activo" selected="true"/>
    </HBox>
    
    <Separator/>
    
    <!-- Botones -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#cancelar" prefWidth="100"
                style="-fx-background-color: #e0e0e0;"/>
        <Button text="Guardar" onAction="#guardar" prefWidth="100"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
    
</VBox>
