<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Facturación" styleClass="title-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Nueva Factura" styleClass="primary-button"/>
        <Button text="Exportar"/>
    </HBox>

    <!-- Filtros y estadísticas -->
    <HBox spacing="20">
        <VBox spacing="5" styleClass="metric-card-small" HBox.hgrow="ALWAYS">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="Total Facturado"/>
            <Label text="0.00 €" styleClass="metric-value-small"/>
        </VBox>
        <VBox spacing="5" styleClass="metric-card-small" HBox.hgrow="ALWAYS">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="Pendiente Cobro"/>
            <Label text="0.00 €" styleClass="metric-value-small"/>
        </VBox>
        <VBox spacing="5" styleClass="metric-card-small" HBox.hgrow="ALWAYS">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="Facturas Vencidas"/>
            <Label text="0" styleClass="metric-value-small"/>
        </VBox>
    </HBox>

    <!-- Filtros de búsqueda -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Desde:"/>
        <DatePicker prefWidth="130"/>
        <Label text="Hasta:"/>
        <DatePicker prefWidth="130"/>
        <CheckBox text="Solo pendientes"/>
        <Button text="Filtrar"/>
    </HBox>

    <!-- Tabla de facturas -->
    <TableView VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Número" prefWidth="120"/>
            <TableColumn text="Fecha" prefWidth="100"/>
            <TableColumn text="Cliente" prefWidth="200"/>
            <TableColumn text="Base" prefWidth="100"/>
            <TableColumn text="IVA" prefWidth="80"/>
            <TableColumn text="Total" prefWidth="100"/>
            <TableColumn text="Estado" prefWidth="100"/>
            <TableColumn text="Acciones" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>
