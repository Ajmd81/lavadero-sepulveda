<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lavaderosepulveda.crm.controller.MainController">
    
    <!-- Top: MenuBar -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Archivo">
                    <MenuItem onAction="#cargarPlantillaFactura" text="Plantilla Factura" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#salir" text="Salir" />
                </Menu>
                <Menu text="Gestión">
                    <MenuItem onAction="#cargarClientes" text="Clientes" />
                    <MenuItem onAction="#cargarProveedores" text="Proveedores" />
                    <MenuItem onAction="#cargarCitas" text="Citas" />
                    <MenuItem onAction="#cargarFacturacion" text="Facturación" />
                </Menu>
                <Menu text="Reportes">
                    <MenuItem onAction="#cargarDashboard" text="Dashboard" />
                    <MenuItem onAction="#cargarResumenFinanciero" text="Resumen Financiero" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#cargarContabilidad" text="Contabilidad" />
                    <MenuItem onAction="#cargarModelosFiscales" text="Modelos Fiscales" />
                </Menu>
            </MenuBar>
            
            <!-- Barra de herramientas -->
            <ToolBar style="-fx-background-color: #E1F5FE;">
                <Button onAction="#cargarDashboard" styleClass="toolbar-button" text="Dashboard" />
                <Separator orientation="VERTICAL" />
                <Button onAction="#cargarClientes" styleClass="toolbar-button" text="Clientes" />
                <Button onAction="#cargarProveedores" styleClass="toolbar-button" text="Proveedores" />
                <Button onAction="#cargarCitas" styleClass="toolbar-button" text="Citas" />
                <Button onAction="#cargarFacturacion" styleClass="toolbar-button" text="Facturación" />
                <Separator orientation="VERTICAL" />
                <Button onAction="#cargarContabilidad" styleClass="toolbar-button" text="Contabilidad" />
                <Button onAction="#cargarResumenFinanciero" styleClass="toolbar-button" text="Resumen Financiero" />
                <Button onAction="#cargarModelosFiscales" styleClass="toolbar-button" text="Modelos Fiscales" />
            </ToolBar>
        </VBox>
    </top>
    
    <!-- Center: Contenido dinámico -->
    <center>
        <BorderPane fx:id="mainBorderPane" styleClass="content-area">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </BorderPane>
    </center>
    
    <!-- Bottom: Barra de estado -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="status-bar">
            <padding>
                <Insets bottom="5" left="10" right="10" top="5" />
            </padding>
            <Label styleClass="status-label" text="Lavadero Sepúlveda CRM v1.0" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblStatusMessage" styleClass="status-label" text="Listo" />
        </HBox>
    </bottom>
</BorderPane>
