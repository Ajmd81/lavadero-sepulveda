<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lavaderosepulveda.crm.controller.ClientesController"
      spacing="20">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Título y botones -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Gestión de Clientes" styleClass="title-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnNuevoCliente" text="Nuevo Cliente" styleClass="primary-button" onAction="#nuevoCliente"/>
        <Button fx:id="btnImportar" text="Importar Excel" onAction="#importarExcel"/>
        <Button fx:id="btnExportar" text="Exportar Excel" onAction="#exportarExcel"/>
    </HBox>
    
    <!-- Barra de búsqueda -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Buscar:"/>
        <TextField fx:id="txtBuscar" promptText="Nombre, teléfono o email..." prefWidth="300" onAction="#buscarClientes"/>
        <Button fx:id="btnBuscar" text="Buscar" onAction="#buscarClientes"/>
        <Button fx:id="btnLimpiar" text="Limpiar" onAction="#limpiarBusqueda"/>
    </HBox>
    
    <!-- Tabla de clientes -->
    <TableView fx:id="tblClientes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNif" text="NIF/CIF" prefWidth="100"/>
            <TableColumn fx:id="colNombreCompleto" text="Nombre / Razón Social" prefWidth="200"/>
            <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="100"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
            <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="200"/>
            <TableColumn fx:id="colCodigoPostal" text="C.P." prefWidth="60"/>
            <TableColumn fx:id="colPoblacion" text="Población" prefWidth="100"/>
            <TableColumn fx:id="colProvincia" text="Provincia" prefWidth="90"/>
            <TableColumn fx:id="colTotalCitas" text="Citas" prefWidth="50"/>
            <TableColumn fx:id="colFacturado" text="Facturado" prefWidth="90"/>
            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="180"/>
        </columns>
    </TableView>
    
    <!-- Barra de estado -->
    <HBox spacing="20">
        <Label fx:id="lblTotalClientes" text="Total clientes: 0"/>
        <Label fx:id="lblClientesActivos" text="Activos: 0"/>
    </HBox>
    
</VBox>